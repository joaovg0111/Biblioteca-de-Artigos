{
    "name": "Python Django Dev",
    // Point to your Docker Compose file
    "dockerComposeFile": "docker-compose.yml",
    // The service VS Code should connect to
    "service": "app",
    "workspaceFolder": "/home/se/workspace",
    "remoteUser": "se",
    "postCreateCommand": "pip install --upgrade pip && pip install --user -r requirements.txt",
    "forwardPorts": [
        8000
    ],

    "customizations": {
        "vscode": {
            "extensions": [
                // Core Python + IntelliSense
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.debugpy",
                "visualstudioexptteam.vscodeintellicode",
                // Django & Jinja
                "batisteo.vscode-django",
                "wholroyd.jinja",
                // Dev productivity
                "njpwerner.autodocstring",
                "kevinrose.vsc-python-indent"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.analysis.typeCheckingMode": "basic",
                "python.formatting.provider": "black",
                "python.linting.enabled": true,
                "python.linting.flake8Enabled": true,
                "terminal.integrated.defaultProfile.linux": "bash"
            }
        }
    }
}